{
  "compilerOptions": {
    "allowJs": true,
    "checkJs" : true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution" : "node",
    "target": "es6",             
    "module": "commonjs",         
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",         
    "strict": true,             
    "esModuleInterop": true,     
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],       
  "exclude": ["node_modules"]   
}