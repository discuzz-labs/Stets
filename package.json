{
  "name": "veve",
  "version": "1.0.11",
  "description": "Veve - A zero-config, type-safe, TypeScript-native testing framework and runner!",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "type": "module",
  "bin": {
    "veve": "bin/index.js"
  },
  "files": [
    "dist/*",
    "bin/*",
    "types/*"
  ],
  "keywords": [
    "testing",
    "cli",
    "javascript",
    "typescript",
    "esm",
    "commonjs",
    "unit-testing",
    "test-runner",
    "automation",
    "developer-tools",
    "open-source",
    "nodejs",
    "veve",
    "jest",
    "mocha",
    "ava",
    "uvu"
  ],
  "author": "A. Shaheen",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "build:dts": "dts-bundle-generator src/index.ts -o types/index.d.ts",
    "fmt": "prettier --write '**/*.{ts,json,md}'",
    "test": "./bin/index.js --watch",
    "docs": "typedoc src --plugin typedoc-plugin-markdown --out ./docs"
  },
  "devDependencies": {
    "@types/diff": "^6.0.0",
    "@types/node": "^22.9.0",
    "@types/proxyquire": "^1.3.31",
    "dts-bundle-generator": "^9.5.1",
    "prettier": "3.4.2",
    "proxyquire": "^2.1.3",
    "typedoc": "^0.27.6",
    "typedoc-plugin-markdown": "^4.4.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0",
    "veve": "file:."
  },
  "dependencies": {
    "diff": "^7.0.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.24.0",
    "esbuild-register": "^3.6.0",
    "kleur": "^4.1.5",
    "pretty-format": "^29.7.0",
    "source-map": "^0.7.4",
    "watcher": "^2.3.1"
  },
  "engines": {
    "node": ">=16.16.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tinytools-oss/veve.git"
  },
  "bugs": {
    "url": "https://github.com/tinytools-oss/veve/issues"
  },
  "homepage": "https://github.com/tinytools-oss/veve"
}
